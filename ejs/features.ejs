<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
</head>
<body>
    <%- include('./partials/navbar.ejs') %>
    <div class="container">
        <div id='app'>
            <form @submit.prevent="createServer" v-if="isHidden === true">
                <h1>Add server</h1>
                <div class="mb-3">
                    <input type="text" v-model="name" class="form-control"/>
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
              </form>

              <form @submit.prevent="updateServer" v-if="!isHidden">
                <h1>Update server</h1>
                <div class="mb-3">
                    <input type="text" v-model="update" class="form-control"/>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
              </form><br>

        <div class="spinner-border" role="status" v-if="servers.length === 0">
            <span class="visually-hidden">Loading...</span>
        </div>
            <ul class="list-group" v-else>
                <li class="list-group-item d-flex justify-content-between align-items-center" v-for="val in servers">
                    <div>
                        <b>{{val.server}} </b>
                    </div>
                    <div>
                        <button class="btn btn-warning m-2" v-on:click="edit(val._id,val.server)">Edit</button>
                        <button class="btn btn-danger"  v-on:click="remove(val._id)">Delete</button>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <script src="https://unpkg.com/vue@next"></script>
    <script src="/app.js"></script>
</body>
</html>